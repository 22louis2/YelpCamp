<% include ../partials/header %>

<div class="container"> 
    <header class="jumbotron top">
        <div class="container">
            <h1>Welcome To YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground) { %>
            <div class="col-lg-3 col-sm-6 mb-3">
                <div class="card">
                    <img class="img-fluid" src="<%= campground.image %>" alt="">
                    <div class="card-body">
                        <h5 class="card-text"><%= campground.name %></h4>
                    </div>
                    <p><a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More Info</a></p>
                </div>
            </div>
        <% }); %>
    </div>

</div>
<% include ../partials/footer %>
